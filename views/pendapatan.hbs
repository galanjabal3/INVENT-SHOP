<body>
    <div class="container">
       <div class="row text-center text-white">
           <div class="col-sm">
    <br><br><br><br><br><h1>PENDAPATAN</h1><br>
    <form action="/pendapatan" method="POST">
       <input type="text" name="inputketerangan" placeholder="Keterangan">
       <input type="text" name="inputjumlah" placeholder="Jumlah"><br><br>
       <button type="submit " class="btn-primary btn-lg">TAMBAH</button>
    </form><br>
    <table border="3" align='center' class="table text-white">
        <thead>
            <tr>
                <th>ID</th>
                <th>Keterangan</th>
                <th>Jumlah</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{ Id_Transaksi }}</td>
                <td>{{ Keterangan }}</td>
                <td>{{ Jumlah }}</td>
                <td><a href="/back/{{ Id_Transaksi }}"><button class="btn-primary">DELETE</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
          </div>
       </div>
    </div>
